<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Managing Guest Cart Coupons -->
    <route url="/V1/multicoupon-guest/:cartId/coupons/:couponCode" method="PUT">
        <service class="Lof\MultiCoupon\Api\GuestCouponManagementInterface" method="set"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <!-- Managing mine Cart Coupons -->
    <route url="/V1/multicoupon/mine/coupons/:couponCode" method="PUT">
        <service class="Lof\MultiCoupon\Api\CouponManagementInterface" method="set"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

</routes>